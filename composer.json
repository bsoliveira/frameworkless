    "type": "project",
    "require": {
        "php-di/php-di": "^6.3",
        "monolog/monolog": "^2.4",
        "nikic/fast-route": "^1.3",
        "laminas/laminas-diactoros": "^2.8",
        "relay/relay": "~2.0",
        "narrowspark/http-emitter": "^1.0"
    },
    "license": "MIT",
